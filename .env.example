# 서버 설정
API_PORT=8080

# 데이터베이스 설정
DATABASE_PATH=./database.db

# JWT 설정
# 보안을 위해 강력한 랜덤 문자열을 사용하세요
# 예: openssl rand -base64 32
JWT_SECRET_KEY=your-secret-key-here-please-change-this

# CORS 설정
# 프론트엔드 주소 (여러 개일 경우 쉼표로 구분)
ALLOWED_ORIGINS=http://localhost:3000

# Logto OIDC 설정 (선택사항)
# Logto 콘솔에서 앱을 생성한 후 아래 값을 설정하세요
LOGTO_ENDPOINT=https://your-logto-domain.logto.app
LOGTO_APP_ID=your-logto-app-id
LOGTO_APP_SECRET=your-logto-app-secret
LOGTO_REDIRECT_URI=http://localhost:8080/oidc/callback
LOGTO_POST_LOGOUT_REDIRECT_URI=http://localhost:3000

# 개발 환경 설정
# development, production
ENVIRONMENT=development
